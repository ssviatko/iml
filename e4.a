	!to "e4.o",plain
	!cpu 65816

	*= $e400

	!align $ffff,$e400	;leave room for softswitches

IO_CON_CLS = $1bfc10
IO_CON_COLOR = $1bfc11
IO_CON_CHAROUT = $1bfc12
IO_CON_REGISTER = $1bfc13
IO_CON_CURSORH = $1bfc14;
IO_CON_CURSORV = $1bfc15;
IO_CON_CURSOR = $1bfc16;
IO_VIDMODE = $1bfc20

x1crominit = $1c0000

romstart
	clc
	xce
	rep #$30
	!rl
	!al
	lda #$0000
	pha
	plb
	plb
	tcd
	ldx #$dfff
	txs
	sep #$20
	!as
	lda #$08
	sta IO_VIDMODE
	lda #$00
	sta IO_CON_CURSORH
	sta IO_CON_CURSORV
	ora #$80
	sta IO_CON_CURSOR
	lda #$0b
	sta IO_CON_COLOR
	lda #$20
	sta IO_CON_CHAROUT
	sta IO_CON_CLS
	ldx #$0000
prloop
	lda initstring, X
	beq done
	sta IO_CON_CHAROUT
	sta IO_CON_REGISTER
	inx
	bra prloop
done
	jml x1crominit

initstring
	!tx "IML 65816 E4 Firmware v00"
	!byte 0x0d
	!tx "(C) Good Neighbors LLC, 2019, 2024"
	!byte 0x0d
	!tx "Developed by Stephen Sviatko"
	!byte 0x0d
	!byte 0

	!align $ffff,$fffc,$00

reset	!word romstart
irq	!word romstart
 
